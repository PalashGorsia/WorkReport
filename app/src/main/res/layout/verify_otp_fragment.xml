<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.app.workreport.container.BaseEvent"/>
        <variable
            name="otpViewModel"
            type="com.app.workreport.ui.otp.VerifyOtpViewModel" />

    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.otp.VerifyOtpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="@dimen/dp10"
            android:visibility="@{otpViewModel.baseEvent==BaseEvent.LOADING?View.VISIBLE:View.GONE,default =gone}"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/dp104"
            android:layout_height="@dimen/dp161"
            android:layout_marginTop="@dimen/dp50"
            android:src="@drawable/splash_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/info_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            android:text="@string/verify_your_phone_number"
            android:theme="@style/TextH1Style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/info_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4m"
            android:text="@string/enter_your_otp_code_here"
            android:theme="@style/TextSimpleStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_no" />

        <RelativeLayout
            android:id="@+id/firstPinViewL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_otp">

            <com.chaos.view.PinView
                android:id="@+id/firstPinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:cursorVisible="true"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textSize="@dimen/sp14"
                android:theme="@style/PinWidget.PinView"
                app:cursorColor="@color/green"
                app:cursorWidth="@dimen/_1sdp"
                app:hideLineWhenFilled="false"
                app:itemCount="4"
                app:itemHeight="@dimen/dp60"
                app:itemRadius="@dimen/dp5"
                app:itemSpacing="@dimen/dp5"
                app:itemWidth="78dp"
                app:lineColor="@color/submit_gray"
                app:lineWidth="@dimen/dp1"
                app:viewType="rectangle" />


        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp58"
            android:layout_marginStart="@dimen/dp25"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginEnd="@dimen/dp25"
            android:text="@string/verify"
            android:theme="@style/ButtonStyle"
            app:layout_constraintTop_toBottomOf="@+id/firstPinViewL" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didn_t_receive_otp_resend"
                android:theme="@style/TextSimpleStyle" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/poppins_semibold"
                android:clickable="true"
                android:text="@string/resend"
                android:id="@+id/btnResendOtp"
                android:textColor="@color/green"
                android:textSize="@dimen/sp14" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>

</layout>