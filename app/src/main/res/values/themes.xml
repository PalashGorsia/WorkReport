        <item name="colorAccent">@color/text_yellow</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="FullScreenDialogStyle" parent="Theme.Japan">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>
    <style name="Theme.Japan.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Japan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Japan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="buttonStyle" parent="Theme.Japan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColor">@drawable/inspection_list_text_selector</item>
        <item name="android:background">@drawable/inspection_button_selector</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
